<h1 class="cent" >Add</h1>

<div class="center">

<h3 class="grey">Label</h3> 

<%= form_for @label, html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :country_id %>
    <%= f.select :country_id, Country.all.collect { |p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
  </div>
  
  <div class="form-group">
    <%= f.label :foundation_date %>
    <%= f.date_field :foundation_date, class: "form-control" %>
  </div> 
 
  <div class="form-group">
    <%= f.label :end_existing_date %>
    <%= f.date_field :end_existing_date, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.file_field :avatar %>
  </div>
 
  <%= f.submit 'Create', class: "btn btn-outline-secondary btn-block" %>
<% end %> 

</div>

