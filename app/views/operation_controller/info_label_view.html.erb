<div class="row justify-content-center">
    <div class="col-11 name_field">
            <div class="row type">LABEL</div>
        <div class="row  name_field"><%=@label.name%></div></div>
</div>
<div class="row justify-content-center">
    <div class="col-4">
        <%= image_tag @label.avatar.url(:thumb) if @label.avatar? %>
    </div>
    <div class="col-7">
        <div class="row  description">
            <div class="col-3 ">COUNTRY:</div>
            <div class="col-9"><%=@label.country.name%></div>
        </div>
        <div class="row  description">
            <div class="col-3 ">FOUNDATION DATE:</div>
            <div class="col-9"><%=@label.foundation_date%></div>
        </div>
        <% if @label.end_existing_date -%>
        <div class="row  description">
            <div class="col-3 ">END EXISTING DATE:</div>
            <div class="col-9"><%=@label.end_existing_date%></div>
        </div>
        <% end -%>
        <div class="row  description">
            <div class="col-3 ">ALBUMS:</div>
            <div class="col-9">
                <% @label.albums.each do |s|%>
                <%= link_to s.name, info_album_view_path(:album_id => s.id)%>&nbsp;&nbsp;&nbsp;
                <% end %>
            </div>
        </div>
    </div>
</div> 
