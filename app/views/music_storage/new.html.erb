<h1 class="cent" >Add</h1>

<div class="center">

<h3 class="grey">Music storage</h3>

<%= form_for @music_storage, html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :storage_type_id %>
    <%= f.select :storage_type_id, StorageType.order(:name).all.collect { |p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :company_id %>
    <%= f.select :company_id, Company.all.collect { |p| [ p.name, p.id ] }, {}, { :class => 'form-control' } %>
  </div>
  
    <div class="div1">
        <div class="row">
            <div class="col-md-6">
                <%= f.label :rack %>
                <%= f.select :rack, (1..25).collect { |p| [ p, p ] }, {}, { :class => 'form-control' } %>
            </div>
            <div class="col-md-6">
                <%= f.label :shelf %>
                <%= f.select :shelf, (1..8).collect { |p| [ p, p ] }, {}, { :class => 'form-control' } %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <%= f.label :section %>
                <%= f.select :section, (1..10).collect { |p| [ p, p ] }, {}, { :class => 'form-control' } %>
            </div>
            <div class="col-md-6">
                <%= f.label :cell %>
                <%= f.select :cell, (1..50).collect { |p| [ p, p ] }, {}, { :class => 'form-control' } %>
            </div>
        </div>
    </div></br>
 
  <%= f.submit 'Create', class: "btn btn-outline-secondary btn-block" %>
<% end %> 

</div>
